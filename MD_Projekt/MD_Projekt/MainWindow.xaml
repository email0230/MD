<Window x:Class="MD_Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MD_Projekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <!--add stuff inside of the buttons-->
            <Label FontSize="15" Margin="5" Content="Wierzchołki:"></Label>
            <TextBox Name="vertices" FontSize="15" Margin="5"></TextBox>
            <Button Height="50" Margin="5" Click="Draw" Content="Rysuj"/>
        </StackPanel>
    </Grid>
</Window>
